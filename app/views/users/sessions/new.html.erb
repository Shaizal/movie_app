<section class="vh-100">
  <div class="container py-5 h-100">
    <div class="row d-flex align-items-center justify-content-center h-100">
      <h2 class="text-center mb-4 pb-2 pb-md-0 mb-md-5">Log In</h2>
      <div class="col-md-8 col-lg-7 col-xl-6">
        <img src="https://mdbcdn.b-cdn.net/img/Photos/new-templates/bootstrap-login-form/draw2.svg"
          class="img-fluid" alt="Phone image">
      </div>
      <div class="col-md-7 col-lg-5 col-xl-5 offset-xl-1">
        <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <form>
          <div class="form-outline mb-4">
            <%= f.input :email,
                  required: false,
                  autofocus: true,
                  input_html: { autocomplete: "email" },
                  class: "form-control form-control-lg" %>
          </div>
          <div class="form-outline mb-4">
            <%= f.input :password,
                  required: false,
                  input_html: { autocomplete: "current-password" },
                  class: "form-control form-control-lg" %>
          </div>
          <div class="d-flex justify-content-between align-items-center mb-4">
            <% if devise_mapping.rememberable? %>
              <%= f.button :submit, "Log in", class: "btn btn-success btn-lg btn-block" %>
                    <div class="form-check mb-4 mt-5 ">
                      <input type="checkbox" name="user[remember_me]" id="user_remember_me" class="form-check-input">
                      <label for="user_remember_me" class="form-check-label ">Remember me</label>
                    </div>
            <% end %>
          </div>
          <div class="d-flex justify-content-around align-items-center mb-4">
            <%= render "users/shared/links" %>
          </div>
        </form>
        <% end %>
      </div>
    </div>
  </div>
</section>
