<h1>Movies</h1>

<%= link_to 'New', new_movie_path, class:"btn btn-secondary" %>
<br>
<br>
<div class="table-responsive">
<table class="table table-striped table-bordered table-hover align-middle">
    <thead class="table-dark">
        <tr>
        <th>Movies</th>
        <th colspan='3'>Actions</th>
        </tr>
    </thead>
    <tbody >
        <% @movies.each do |movie| %>
            <tr>
                <td><%= movie.title %></td>
                <td><%= link_to 'view' , movie_path(movie.id)  %></td>
                <td><%= link_to 'edit' , edit_movie_path(movie.id)  %></td>
                <td><%= button_to 'delete' , movie_path(movie.id), method: :delete,data: { turbo_method: :delete, turbo_confirm: "Are you sure?" }  %></td>
            </tr>
        <% end %>
    </tbody>
</table>
</div>