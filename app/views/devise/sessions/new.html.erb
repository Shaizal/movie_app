<section class="vh-100 gradient-custom">
  <div class="container py-5 h-100">
    <div class="row justify-content-center align-items-center h-100">
      <div class="col-12 col-lg-9 col-xl-7">
        <div class="card shadow-2-strong card-registration" style="border-radius: 15px;">
          <div class="card-body p-4 p-md-5">
            <h2 class="mb-4 pb-2 pb-md-0 mb-md-5">Log in</h2>
            <form action="<%= session_path(resource_name) %>" method="post">
              <%= csrf_meta_tags %>
              <div class="form-inputs">
                <div class="mb-4">
                  <label for="user_email" class="form-label">Email</label>
                  <input type="email" name="user[email]" id="user_email" class="form-control form-control-lg" autocomplete="email" autofocus>
                </div>
                <div class="mb-4">
                  <label for="user_password" class="form-label">Password</label>
                  <input type="password" name="user[password]" id="user_password" class="form-control form-control-lg" autocomplete="current-password">
                </div>
                <% if devise_mapping.rememberable? %>
                  <div class="form-check mb-4">
                    <input type="checkbox" name="user[remember_me]" id="user_remember_me" class="form-check-input">
                    <label for="user_remember_me" class="form-check-label">Remember me</label>
                  </div>
                <% end %>
              </div>
              <div class="form-actions">
                <button type="submit" class="btn btn-primary btn-lg">Log in</button>
              </div>
            </form>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
